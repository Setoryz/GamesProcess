@model IEnumerable<GamesProcess.Models.Event>

@{
    ViewData["Title"] = "Search";
    int y = 1;
}

<h2>Search</h2>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>
*@


<form action="Search" method="get">
    <div>
        Advanced Search:
        <div class="form-group">
            <label class="control-label">No of Search Values</label>
            <input type="number" name="NoOfSearchValues" min="1" max="5" value="@ViewData["SearchParmAmt"]" />
        </div>
        <div class="form-group">
            <label class="control-label">Reference Value</label>
            <input type="number" name="ReferenceValue" min="1" max="90" value="@ViewData["ReferenceParm"]" />
            <label class="control-label">Reference Value Positon</label>
            <input type="number" name="ReferencePos" min="0" max="5" value="@ViewData["ReferencePosParm"]" />
        </div>
        <div class="form-group">
            <label class="control-label">Value 2</label>
            <input type="number" name="Value2" min="1" max="90" value="@ViewData["Value2Parm"]" />
            <p>
                Position
                <label class="control-label">Weeks Apart</label>
                <input type="number" name="Value2Week" min="-4" max="4" value="@ViewData["Value2WeekParm"]" />
                <label class="control-label">Week Position</label>
                <input type="number" name="Value2Pos" min="1" max="5" value="@ViewData["Value2PosParm"]" />
            </p>
        </div>
        <input type="submit" class="btn btn-default" value="Search" />
        <a asp-action="Index">Back to Full List</a>
    </div>
</form>

@if (Model != null)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Winning)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Machine)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WinningValues)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MachineValues)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
                    </td>
                </tr>
                @if (y % 5 == 0)
                {
                    <tr class="col">
                        <td></td>
                        <td></td>
                        @*<td></td>*@
                        <td></td>
                    </tr>
                }
                y++;
            }
        </tbody>
    </table>
}
