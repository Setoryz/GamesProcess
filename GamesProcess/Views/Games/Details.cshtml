@model GamesProcess.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Events)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Event No</th>
                    <th>Winning</th>
                    <th>Machine</th>
                </tr>
                @foreach (var item in Model.Events)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventID)
                        </td>
                        <td>
                            @for (int i = 0; i < item.Winning.Length; i++)
                            {
                                @Html.DisplayFor(modelItem => item.Winning[i])
                                @if (i < item.Winning.Length - 1)
                                {
                                    <span>&nbsp;|&nbsp;</span>
                                }

                            }
                        </td>
                        <td>
                            @for (int i = 0; i < item.Machine.Length; i++)
                            {
                                @Html.DisplayFor(modelItem => item.Machine[i])
                                @if (i < item.Machine.Length - 1)
                                {
                                    <span>&nbsp;|&nbsp;</span>
                                }

                            }
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> | 
    <a asp-action="Delete" asp-route-id="@Model.ID">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
